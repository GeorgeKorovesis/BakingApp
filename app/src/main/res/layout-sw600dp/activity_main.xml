<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="horizontal"
    tools:context="com.example.korg.bakingapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout">

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.korg.bakingapp.RecipeNameFragment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        android:id="@+id/primary_layout">

        <FrameLayout
            android:id="@+id/primary_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.korg.bakingapp.RecipeNameFragment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="visible"
        android:id="@+id/secondary_layout">

        <FrameLayout
            android:id="@+id/secondary_frame"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:context="com.example.korg.bakingapp.RecipeNameFragment" />
    </LinearLayout>
</LinearLayout>
